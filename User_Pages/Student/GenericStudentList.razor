                                                            @{
                                                                var _studentCount = (context as AggregateTemplateContext);
                                                                <div>
                                                                    Total Student: @_studentCount.Sum
                                                                </div>
                                                            }
                                                        </GroupFooterTemplate>
                                                    </GridAggregateColumn>

                                                </GridAggregateColumns>
