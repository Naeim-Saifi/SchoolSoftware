                                            AllowResizing="true" AllowExcelExport="true"
                                            EnableAutoFill="true" AllowReordering="true"
                                            ShowColumnChooser="false" AllowGrouping="true" AllowSorting="true"
                                            AllowFiltering="true" AllowPaging="true" ShowColumnMenu="true"
                                            Toolbar="@(new string[] {"Search","Print" })">
                                        <GridFilterSettings Type="@Syncfusion.Blazor.Grids.FilterType.CheckBox"></GridFilterSettings>
                                        <GridPageSettings PageSize="100" PageSizes="true"></GridPageSettings>
                                        <GridSearchSettings Fields=@InitSearchClass Operator=Syncfusion.Blazor.Operator.Contains Key=""
                                                            IgnoreCase="true"></GridSearchSettings>
                                        <GridGroupSettings Columns=@InitialGroupClass>
                                            <CaptionTemplate>
                                                @{
                                                    var _class = (context as CaptionTemplateContext);
                                                    <div>@_class.Field - @_class.Key</div>
                                                }
                                            </CaptionTemplate>
                                        </GridGroupSettings>
                                        <GridAggregates>
                                            <GridAggregate>
                                                <GridAggregateColumns>
                                                    <GridAggregateColumn Field=@nameof(Class_And_Section_Count.studentCount) Type="AggregateType.Sum">
