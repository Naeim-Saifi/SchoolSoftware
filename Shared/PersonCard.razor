@inherits PersonCardBase

<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>

            <MudAvatar Image="images/avatar_jonny.jpg" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@UserName</MudText>
            <MudText Typo="Typo.caption">@UserRoleName</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@*@code { [Parameter] public string Class { get; set; }
            [Parameter] public string Style { get; set; } }*@